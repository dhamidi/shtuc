#!/bin/sh
shtuc() {
    if [ "$#" = 1 ]; then
        shtuc-get "$1"
    elif [ "$#" -ge 2 ]; then
        if [ "$#" -ge 3 ]; then
            if [ "$2" = run ]; then
                set -- -x "$1" "$3"
            else
                exit 64 # EX_USAGE
            fi
        fi
        shtuc-set "$@"
    fi
}

[ "$0" = "sh" ] || shtuc "$@"
